{
  "name": "nodejs-template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "export NODE_ENV=production && node ./dist/api/server.js",
    "build": "tsc -p tsconfig.json",
    "generate:docs": "tsoa spec-and-routes",
    "dev": "tsoa spec-and-routes && tsnd --transpile-only --respawn --ignore-watch node_modules src/api/server.ts",
    "migration:generate": "typeorm-ts-node-commonjs -d ./src/persistence/data-source.ts migration:generate ./src/persistence/migrations/default",
    "migration:run": "typeorm-ts-node-commonjs -d ./src/persistence/data-source.ts migration:run",
    "migration:revert": "typeorm-ts-node-commonjs -d ./src/persistence/data-source.ts migration:revert"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.9",
    "concurrently": "^7.6.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@automapper/classes": "^8.7.7",
    "@automapper/core": "^8.7.7",
    "@types/swagger-ui-express": "^4.1.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.6.0",
    "ts-node": "^10.9.1",
    "tsoa": "^4.1.3",
    "tsyringe": "^4.7.0",
    "typeorm": "^0.3.10"
  }
}
